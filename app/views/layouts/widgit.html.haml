!!! html
%html
  %head
    %title
      WidgIt CMS
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    %meta{charset: "utf-8"}
    %meta{content: "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport"}
  %body{ data: { id: @page.id } }
    = render 'side_panel'
    .page-wrapper{ data: { editor: 'position', type: 'page', page_wrapper: true } }
      = yield
      .container
        .row
          .col-xs-12
            = render 'bottom'
    = render 'toolbar'
    = render 'dialog'
